                <div class="container-fluid">
                    <h3>From Database</h3>
                <div class=" products " style="display: flex; flex-wrap: wrap;">
                    <!-- Products -->
                    <% products.forEach(product => { %>
                        <div class="product-card" style="display: flex; width: 12.05rem; flex-direction: column; justify-content: space-between;">
                            <img src="<%= product?.image %>" alt="<%= product?.name %>"/>
                            <div>
                                <h3><%= product?.name%></h3>
                            <p><%= product?.price%></p>
                            <a href="#" class="btn">Add to Cart</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
                   <!-- Pagination -->
                    <div class="pagination">
                        <% if (currentPage > 1) { %>
                    <%         console.log("p",currentPage - 1) %>
                            <a href="/<%= (currentPage = currentPage - 1 )%>" class="prev">&laquo; Previous</a>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <a href="/<%= (currentPage = Number(currentPage) + Number(1)) %>" class="next">Next &raquo;</a>
                        <% } %>
                    </div>
                </div>
                
                <div class="pagination-div">
                    <p>Pagination: 
                        <% for( let i = 1; i <= totalPages; i++ ) { %>
                            <a href="/<%= i %>" class="pagination"><%= i %>.</a>
                        <% } %>
                    </p>
                </div>
            </div>
        
    </section>

   